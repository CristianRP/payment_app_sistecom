<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="order"
            type="com.sistecom.paymentapp.data.model.order.Order" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_8"
        app:cardCornerRadius="@dimen/margin_8">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_selected"
            android:padding="@dimen/margin_8">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgLogoOrder"
                android:layout_width="@dimen/margin_64"
                android:layout_height="@dimen/margin_64"
                android:layout_margin="@dimen/margin_8"
                android:padding="@dimen/margin_8"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtAlternId"
                style="@style/BoldSubTitleStyle"
                android:text="@{order.alternId}"
                app:layout_constraintStart_toEndOf="@id/imgLogoOrder"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtConcept"
                style="@style/AppTextStyle"
                android:layout_width="0dp"
                android:layout_marginStart="@dimen/margin_8"
                android:layout_marginEnd="@dimen/margin_8"
                android:gravity="start"
                android:text="@{order.concept}"
                android:textColor="@color/colorSecondary"
                app:layout_constraintEnd_toStartOf="@+id/imgCardLogo"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/imgLogoOrder"
                app:layout_constraintTop_toBottomOf="@id/txtAlternId" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtTransactionAmount"
                style="@style/BoldSubTitleStyle"
                android:text="@{String.valueOf(order.amount)}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txtRequestDate"
                style="@style/AppTextStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_8"
                android:layout_marginTop="@dimen/margin_8"
                android:layout_marginEnd="@dimen/margin_8"
                android:gravity="end"
                android:padding="@dimen/margin_4"
                android:text="@{order.requestDate}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imgLogoOrder"
                app:layout_constraintTop_toBottomOf="@+id/txtConcept" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgCardLogo"
                android:layout_width="@dimen/margin_20"
                android:layout_height="@dimen/margin_20"
                android:layout_margin="@dimen/margin_4"
                android:tint="@color/colorBadge"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txtTransactionAmount" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>